extends layout_home

block content
  .top-bar
    .left-box
      .number-box 25 #[img(src='/images/user_assets/senha.png', alt='Image', height='20px')]
        .plus-box +
    .middle-box CANTINA
    .right-box
      img(src='/images/user_assets/profile.png', alt='Profile', height='50px', width='50px' id="dropdown-btn")
      .dropdown-menu
        a(href='#') Editar Perfil
        a(href='#') As Minhas Reservas
        a.w3-text-red(href='#') Log Out
  p.w3-padding
  .row
    .hcol
      h3 Almoço
    each day in ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta']
      .col
        h3= day
        .square
          img(src=`images/user_assets/almoço${day}.png`, alt='Almoço')
          span.checkmark
  .row
    .hcol
      h3 Jantar
    each day in ['Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta']
      .col
        .square
          img(src=`images/user_assets/jantar${day}.png`, alt='Jantar')
          span.checkmark
  .reservar-btn Reservar