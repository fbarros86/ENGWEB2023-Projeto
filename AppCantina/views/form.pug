extends layout

block content
    link(rel='stylesheet', href='/stylesheets/form.css')
    script(src="/javascripts/form.js")
    include navbar2.pug
    .row.no-guetters 
        .leftside.col
            .container
                h1.h1-list Lista de Utilizadores
                .table
                    .table-container(tabindex="0")
                        table.table.table-hover
                            thead
                                tr
                                    th Nome
                                    th Tipo
                                    th
                
                            each l in list
                                tbody
                                    tr
                                        td= l.username
                                        td= l.tipo
                                        td
                                            a(href='/form/' + l._id)
                                                img.btn.edit(src='/images/user_assets/edit.png', alt='Edit', height='33pw', width='33pw')
                                            img.btn.delete(onclick='deleteUser("'+l._id+'")' src='/images/user_assets/delete.png', alt='Delete', height='33pw', width='33pw', id="btn")
        .rightside.col
            .container
                h1 Criar Novo Utilizador
                form( method="POST")
                    .form-field
                        label(for="email") Email:
                        input(type="text", id="email", name="email", placeholder="Enter email", required)
                    .form-field
                        label(for="username") Nome:
                        input(type="text", id="username", name="username", placeholder="Enter name", required)
                    .form-field
                        label(for="password") Password:
                        input(type="password", id="password", name="password", placeholder="Enter password", required)
                    .form-field
                        label(for="tipo") Type:
                        select(id="userType", name="tipo", required)
                            option(value="S") Student
                            option(value="NE") Not a Student
                            option(value="A") Admin
                    button(type="submit") Submit
    include footer.pug