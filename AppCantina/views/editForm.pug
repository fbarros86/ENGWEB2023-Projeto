extends layout

block content
    link(rel='stylesheet', href='/stylesheets/form.css')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')
    include navbar2.pug
    .row.no-guetters 
        .leftside.col
            .container
                h1.h1-list Lista de Usuários
                .table
                    .table-container(tabindex="0")
                        table.table.table-hover
                            thead
                                tr
                                    th Nome
                                    th Tipo
                                    th
                
                            each l in list
                                tbody
                                    tr
                                        td= l.username
                                        td= l.tipo
                                        td
                                            a(href='/form/' + l._id)
                                                img.edit(src='/images/user_assets/edit.png', alt='Edit', height='33pw', width='33pw')
                                            img.delete(src='/images/user_assets/delete.png', alt='Delete', height='33pw', width='33pw', id="btn")
        .rightside.col
            .container
                h1 Editar Usuário
                form(action="/createUser", method="POST")
                    .form-field
                        label(for="name") Email:
                        input(type="text", id="name", name="name", value=u.email, required)
                    .form-field
                        label(for="name") Nome:
                        input(type="text", id="name", name="name", value=u.username, required)
                    .form-field
                        label(for="password") Password:
                        input(type="password", id="password", name="password", value=u.password, required)
                    .form-field
                        label(for="type") Type:
                        select(id="userType", name="type", value=u.tipo required)
                            option(value="student") Student
                            option(value="notStudent") Not a Student
                            option(value="notStudent") Admin
                    button(type="submit") Submit
    include footer.pug